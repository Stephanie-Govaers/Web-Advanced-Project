<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /~user/api
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ app.php?/$1 [L]
    RewriteEngine On
</IfModule>
<IfModule !mod_rewrite.c>
    ErrorDocument 404 /404.php
</IfModule>
<Limit PUT DELETE GET POST>
    Require all granted
</Limit>